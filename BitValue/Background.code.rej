diff a/BitValue/Background.code b/BitValue/Background.code	(rejected hunks)
@@ -0,0 +1,51 @@
+
+/*
+	모션동작 종료 후 자동 서보off
+*/
+{
+	// 모션 종료시간 설정
+	VAR MotionOffTime;
+	MotionOffTime = 15;
+	
+	// 모션동작상태천이 감지
+	SVAR preMotionOn;
+	VAR curMotionOn;
+	curMotionOn = #30199;
+
+	// 새로운 모션이 시작되었다면
+	if( (!preMotionOn) && (curMotionOn) )
+	{
+		WINC_ENTER_IMCMD();
+		WINC_SET_GIO(0X01);
+		WINC_LEAVE_IMCMD();
+	}
+
+	// 모션동작이 종료되었다면
+	if( (preMotionOn) && (!curMotionOn) )
+	{
+		// 모션OFF타임까지 타이머 동작 ( 10번 타이머사용)
+		resetT(10);
+		startT(10, MotionOffTime);
+	}
+	
+	// 현재 모션동작상태면 타이머 리셋
+	if( curMotionOn )
+	{
+		resetT(10);
+	}
+	
+	// 타이머동작이 완료되면 모터OFF
+	if( TON(10) )
+	{
+		WINC_ENTER_IMCMD();
+		WINC_CLR_GIO(0X01);
+		WINC_LEAVE_IMCMD();
+	}
+	
+	preMotionOn = curMotionOn;
+	
+}
+
